@charset "utf-8"

background = #fff
foreground = #333
shadows = #000

/* Frequently used properties */
trans =
    transition 0.35s ease all
transshort =
    transition 0.15s ease all
shad =
    box-shadow 0 0.1rem 0.1rem rgba(shadows, 0.05), 0 0.2rem 0.3rem rgba(shadows, 0.1), 0 0.3rem 0.5rem rgba(shadows, 0.05)
shadamb =
    box-shadow 0 0.1rem 0.25rem rgba(shadows, 0.15), 0 0.5rem 0.5rem rgba(shadows, 0.08), 0 1rem 1rem rgba(shadows, 0.05), 0 1.5rem 1.5rem rgba(shadows, 0.03)

/* Base fonts for UI */
fonts = font = 'Open Sans', sans-serif, serif
font-mono = mono = Iosevka, monospace

br = 0.2rem
iconsize = 1.5rem

/* Colors used by this theme */
act = #446adb
acttext = #446adb
accent1 = #5144db
error = #d44f57
red = error
success = #4ab660
green = success
warning = #ff9748
orange = warning

borderPale = #e1e2e5
borderBright = #c8cdd1

text = #666
backgroundDeeper = #fafafa

html, body
    margin 0
    padding 0
    -webkit-user-select none
    position relative
    height 100%
body
    font 16px/32px fonts
    color text
    background background
    cursor default
    overflow hidden

button,
input[type="button"],
input[type="submit"],
input[type="reset"],
.button
    padding 0.5em 1em
    margin 0 0.3em 0 0
    border 1px solid act
    color acttext
    font inherit
    font-weight 400
    border-radius br
    background background
    display inline-block
    cursor pointer
    text-align center
    {trans}
    &:hover, &.active
        background acttext
        color background
        border-color accent1
        {transshort}
        svg
            color background
    &:active, &.selected
        {transshort}
        border-color accent1
        background accent1
        color background
        svg
            color background
    &.big
        padding 1rem 2.5rem
        font-size 150%

h1, h2, h3, h4, h5, h6
    margin-bottom 0
    color accent1
    .docs-panel-Docs &
        margin-top 1.5em
        &:first-child
            margin-top 1rem
h2, h3
    font-weight 400
h4, h5, h6
    font-weight 700
h1
    font-weight 300
    img
        margin-right 0.5rem


p
    margin 1em 0
    .docs-panel-Docs &
        margin 0.75em 0
        line-height 1.5

a, .a
    color act
    cursor pointer
    text-decoration none
    {trans}
    &:hover
        color accent1
    &.error
        color error
    &.success
        color success
    &.warning
        color warning
    .error, .success, .warning
        &:hover
            opacity 0.8

#theMainLayout
    display grid
    width 100%
    height 100%
    position fixed
    left 0
    top 0
    grid-template-columns 1fr auto
    grid-template-rows 1fr auto
#theMainContent
    grid-column 1
    padding 1rem 1rem 1rem 2rem
    ul
        padding 0
        li
            list-style none
            margin 0
            img
                vertical-align baseline
                margin-right 0.35rem
#theSidebar
    grid-column 2
    padding 1rem 2rem 1rem 1rem
    align-self center
    justify-self end
    animation float 5s ease infinite
    img
        animation rotate 5s -1.5s ease-in-out infinite
#theFooter
    grid-column 1 / 3
    padding 1rem 2rem
    background backgroundDeeper
    border-top 1px borderPale solid
    align-self end
    display flex
    flex-flow row nowrap
    justify-content space-between
    align-items center
    *
        flex 0 0 auto

.anErrorMessage
    overflow auto
    white-space pre-wrap
    max-width 90vw
    max-height 13rem
    margin-bottom 0
    word-wrap break-word

@keyframes float
    0%, 100%
        transform translate(0, -0.5rem)
    50%
        transform translate(0, 0.5rem)
@keyframes rotate
    0%, 100%
        transform rotate(3deg)
    50%
        transform rotate(-3deg)

@keyframes spin
    0%
        transform rotate(0deg)
    100%
        transform rotate(360deg)
.spin
    animation spin 0.75s linear infinite
    transform-origin 47% 50%